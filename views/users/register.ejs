<% layout('layouts/boilerplate') %> 
<div class="row">
    <div class="col-sm-10 col-md-6 col-lg-4 mx-auto">
        <h1 class="text-center m-4" >Welcome!</h1>
        <form action="/register" method="post" class="validated-form mt-0 pt-0" novalidate>
            <div>
                <label for="user" class="form-label text-left"><span><h4>Register</h4></span></label>
                <input type="text" class="form-control text-muted" name="username" id="username" value="username" autofocus required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
                <label for="email" class="form-label ml-auto"></label>
                <input type="email" class="form-control text-muted" name="email" id="email" value="email" required>
                <div class="valid-feedback">
                    Looks Good!
                </div> 
                <label for="password" class="form-label text-left"></label>
                <input type="password" class="form-control text-muted" name="password" id="password" placeholder="password" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="d-flex justify-content-center">
            <button class="btn btn-success mt-4"> Submit</button>
        </div>
        </form>
    </div>
</div>